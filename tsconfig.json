{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "rootDir": "./",
    "outDir": "./dist",
    "baseUrl": "./src",
    "paths": {
      "@services/*": ["services/*"],
      "@command/*": ["command/*"],
      "@types/*": ["types/*"],
      "@logs/*": ["logs/*"],
      "@core/*": ["core/*"],
      "@data/*": ["data/*"]
    },
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmit": false,
    "emitDeclarationOnly": false
  },
  "include": ["src"]
}
